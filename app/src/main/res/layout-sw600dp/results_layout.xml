<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:pic="@+pic/drink_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:pic="@+pic/featured_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp">

            <TextView
                android:pic="@+pic/featured_drinks"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Random"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

            <ImageButton
                android:pic="@+pic/minimize_button"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/cardview_light_background"
                app:srcCompat="@android:drawable/arrow_up_float" />
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:pic="@+pic/random_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <AutoCompleteTextView
            android:pic="@+pic/search_drinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_drink_string" />

        <android.support.v7.widget.RecyclerView
            android:pic="@+pic/recyclerview_drinks"
            android:layout_width="match_parent"

            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:pic="@+pic/drink_detail_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="10dp">

    </FrameLayout>


</LinearLayout>