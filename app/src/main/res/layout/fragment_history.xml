<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:pic="@+pic/fragmentHistory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        >


        <AutoCompleteTextView
            android:pic="@+pic/search_drinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_drink_string" />

        <android.support.v7.widget.RecyclerView
            android:pic="@+pic/recyclerview_drinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <com.alexnassif.mobile.barbro.YouTubeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:pic="@+pic/dragLayout"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <include layout="@layout/header_exit"
            android:pic="@+pic/header_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <TextView
            android:pic="@+pic/desc"
            android:tag="desc"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#286db7"/>
        <TextView
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:pic="@+pic/desc_view_youtube"
            android:background="#000000"/>


    </com.alexnassif.mobile.barbro.YouTubeLayout>

</FrameLayout>
