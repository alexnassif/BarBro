<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.raymond.barbro.DrinkDetailActivity">

<ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    app:srcCompat="@android:color/darker_gray"
    android:id="@+id/drink_detail_image"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="16dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="16dp" />

<TextView
    tools:text="TextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/drink_name"
    android:layout_marginStart="8dp"
    app:layout_constraintLeft_toRightOf="@+id/drink_detail_image"
    android:layout_marginLeft="8dp"
    app:layout_constraintBottom_toBottomOf="@+id/drink_detail_image"
    app:layout_constraintTop_toTopOf="@+id/drink_detail_image"
    android:fontFamily="casual"
    android:textSize="24sp" />

<TextView
    tools:text="TextView"
    android:layout_width="344dp"
    android:layout_height="206dp"
    android:id="@+id/drink_ingredients"
    app:layout_constraintTop_toBottomOf="@+id/drink_detail_image"
    android:layout_marginStart="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="24dp"
    android:fontFamily="casual"
    android:textSize="24sp" />
</android.support.constraint.ConstraintLayout>
