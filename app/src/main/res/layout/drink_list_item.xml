<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#286db7"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@android:color/background_light"
        android:id="@+id/drink_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/drink_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/drink_image"
        app:layout_constraintLeft_toRightOf="@+id/drink_image"
        app:layout_constraintTop_toTopOf="@+id/drink_image"
        tools:text="TextView" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/star_big_off"
        android:background="@android:color/transparent"
        android:id="@+id/fave_button"
        android:layout_marginStart="80dp"
        app:layout_constraintLeft_toRightOf="@+id/drink_data"
        android:layout_marginLeft="80dp"
        app:layout_constraintTop_toTopOf="@+id/drink_data"
        app:layout_constraintBottom_toBottomOf="@+id/drink_data"
        app:layout_constraintVertical_bias="0.6"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.91" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#dadada"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>