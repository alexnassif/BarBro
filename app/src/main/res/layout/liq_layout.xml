<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Spinner
        android:id="@+id/liquor_spinner"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:prompt="@string/liquor_prompt"
        android:gravity="center_vertical|center|start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_drinks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/liquor_spinner"
        app:layout_constraintRight_toRightOf="@+id/liquor_spinner"
        app:layout_constraintTop_toBottomOf="@+id/drink_autoCompleteTextView" />

    <AutoCompleteTextView
        android:hint="@string/search_drink_string"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/drink_autoCompleteTextView"
        app:layout_constraintTop_toBottomOf="@+id/liquor_spinner"
        app:layout_constraintLeft_toLeftOf="@+id/liquor_spinner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />


</android.support.constraint.ConstraintLayout>