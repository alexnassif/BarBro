<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raymond.barbro.MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/more_fave_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/fave_recyclerView"
            android:layout_marginStart="144dp"
            android:layout_marginLeft="144dp"
            app:layout_constraintBottom_toTopOf="@+id/fave_recyclerView"
            android:layout_marginBottom="8dp"
            app:layout_constraintRight_toRightOf="@+id/fave_recyclerView"
            app:layout_constraintHorizontal_bias="0.94" />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/random_button"
            app:layout_constraintLeft_toLeftOf="@+id/random_recyclerView"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="136dp"
            app:layout_constraintBottom_toTopOf="@+id/random_recyclerView"
            android:layout_marginBottom="16dp"
            app:layout_constraintRight_toRightOf="@+id/random_recyclerView"
            app:layout_constraintHorizontal_bias="0.41" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="236dp"
            android:layout_height="155dp"
            android:id="@+id/fave_recyclerView"
            android:layout_marginStart="120dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="120dp"
            app:layout_constraintBottom_toTopOf="@+id/random_button"
            android:layout_marginBottom="16dp" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="236dp"
            android:layout_height="189dp"
            android:layout_marginStart="120dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="120dp"
            android:id="@+id/random_recyclerView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
