<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raymond.barbro.MainFragment"
    android:background="@color/cardview_light_background">

    <Button
        android:text="More"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/more_fave_button"
        app:layout_constraintBottom_toTopOf="@+id/fave_recyclerView"
        app:layout_constraintLeft_toLeftOf="@+id/fave_recyclerView"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="@android:color/holo_blue_bright" />

    <Button
        android:text="More"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/random_button"
        app:layout_constraintBottom_toTopOf="@+id/random_recyclerView"
        app:layout_constraintLeft_toLeftOf="@+id/random_recyclerView"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="@android:color/holo_blue_bright" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="353dp"
        android:layout_height="150dp"
        android:id="@+id/random_recyclerView"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/fave_recyclerView"
        android:scrollbars="horizontal" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="353dp"
        android:layout_height="150dp"
        android:id="@+id/fave_recyclerView"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:scrollbars="horizontal" />
</android.support.constraint.ConstraintLayout>
