<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raymond.barbro.MainFragment"
    android:background="@color/cardview_light_background">

    <Button
        android:text="More"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/more_fave_button"
        app:layout_constraintBottom_toTopOf="@+id/fave_recyclerView"
        app:layout_constraintLeft_toLeftOf="@+id/fave_recyclerView"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        />

    <Button
        android:text="More"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/random_button"
        app:layout_constraintBottom_toTopOf="@+id/random_recyclerView"
        app:layout_constraintLeft_toLeftOf="@+id/random_recyclerView"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        />

    <TextView
        android:text="Favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fave_textview"
        app:layout_constraintLeft_toLeftOf="@+id/fave_recyclerView"
        app:layout_constraintBottom_toTopOf="@+id/fave_recyclerView"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="Random Drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/allDrinks_textview"
        app:layout_constraintBottom_toTopOf="@+id/random_recyclerView"
        app:layout_constraintLeft_toLeftOf="@+id/random_recyclerView"
        android:textColor="@color/colorPrimaryDark" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:id="@+id/random_recyclerView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/fave_recyclerView"
        android:scrollbars="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="0dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:id="@+id/fave_recyclerView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:elevation="0dp" />
</android.support.constraint.ConstraintLayout>
