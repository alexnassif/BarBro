<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/featured_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/featured_drinks"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Random"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/minimize_button"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/cardview_light_background"
                app:srcCompat="@android:drawable/arrow_up_float" />
        </FrameLayout>

        <include layout="@layout/drink_cardview_item"
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp" />


        <AutoCompleteTextView
            android:id="@+id/search_drinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/search_drink_string" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_drinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <include layout="@layout/drink_detail_novideo"
        android:id="@+id/novideo_drink_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>

</FrameLayout>