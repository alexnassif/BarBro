<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">


        <AutoCompleteTextView
            android:id="@+id/search_drinks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/search_drink_string"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/random_recyclerView" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_drinks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_drinks" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/random_recyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/featured_layout" />

        <FrameLayout
            android:id="@+id/featured_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/featured_drinks"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Random"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

            <ImageButton
                android:id="@+id/minimize_button"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/cardview_light_background"
                app:srcCompat="@android:drawable/arrow_up_float" />
        </FrameLayout>


    </android.support.constraint.ConstraintLayout>

    <com.example.raymond.barbro.YouTubeLayout
        android:id="@+id/dragLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@android:color/holo_blue_bright"
            android:gravity="center"
            android:tag="text"
            android:text="Drag me to the bottom"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#286db7"
            android:gravity="center"
            android:tag="desc"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/desc_view_youtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />


    </com.example.raymond.barbro.YouTubeLayout>

</FrameLayout>