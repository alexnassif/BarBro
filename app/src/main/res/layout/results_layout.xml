<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:pic="@+pic/featured_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp">

            <TextView
                android:pic="@+pic/featured_drinks"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Random"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

            <ImageButton
                android:pic="@+pic/minimize_button"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/cardview_light_background"
                app:srcCompat="@android:drawable/arrow_up_float" />
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:pic="@+pic/random_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp" />

        <AutoCompleteTextView
            android:pic="@+pic/search_drinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/search_drink_string" />

        <android.support.v7.widget.RecyclerView
            android:pic="@+pic/recyclerview_drinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <com.alexnassif.mobile.barbro.YouTubeLayout
        android:pic="@+pic/dragLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <include layout="@layout/header_exit"
            android:pic="@+pic/header_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <TextView
            android:pic="@+pic/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#286db7"
            android:gravity="center"
            android:tag="desc"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <TextView
            android:pic="@+pic/desc_view_youtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />


    </com.alexnassif.mobile.barbro.YouTubeLayout>

</FrameLayout>